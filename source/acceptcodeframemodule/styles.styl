// acceptcodeframe styles
button-size = 80px

.input-error
    input
        border solid 2px red

.accepting
    #acceptcodeframe
        z-index: 20
        opacity 1
        pointer-events: all

#acceptcodeframe
    position relative
    padding 30px
    width 100%
    height 100%
    box-sizing: border-box
    z-index 0
    opacity: 0
    transition opacity 0.3s
    background-color #000c
    pointer-events: none
    display: flex
    flex-direction: column
    justify-content: space-around
    label
        font-size 16pt
    textarea
        padding 40px
        font-size 16pt
    input
        font-size 16pt
        text-align: center

#acceptcode-buttons
    position relative
    height 20%
    width 100%


#cancel-button
    cursor: pointer
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    width button-size
    height button-size
    background-color #024c
    border-radius: 20px
    svg
        width: inherit
        height: inherit
#accept-button
    cursor: pointer
    position absolute
    right 0
    top 50%
    transform translateY(-50%)
    width button-size
    height button-size
    background-color #024c
    border-radius: 20px
    svg
        width: inherit
        height: inherit