// addcodebutton styles
#addcodebutton-frame
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    flex-direction: column
    // align-items: center
    justify-content: space-around
    padding 20px
    box-sizing: border-box
    svg
        height 50px
        width 50px

    h1
        margin-top 20px
        // font-weight 700
        line-height: 130%
        font-size: 13pt

#addcodebutton-frame > *    
    padding 40px
    width 100%
    box-sizing: border-box
    background-color #024c
    border-radius: 15px
    // align-self: center

