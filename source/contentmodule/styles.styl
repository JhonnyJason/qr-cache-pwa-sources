// content styles
#content
    position relative
    width 100%
    height 100%

#overlay-frame
    position absolute
    width 100%
    height 100%
    top 0
    left 0

#scroll-frame
    position absolute
    display flex
    width 100%
    height 100%
    top 0
    
    left 0
    z-index 10
    overflow-x auto
    
    scroll-snap-type x mandatory
    
#scroll-frame > *
    flex-shrink: 0
    scroll-snap-align: start;
    height 100%
    width 100vw

@media (min-aspect-ratio: 0.9 ) and (min-width: 700px)
    #scroll-frame > *
        width 50vw

@media (min-aspect-ratio: 1.4 ) and (min-width: 1050px)
    #scroll-frame > *
        width 33.33vw

@media (min-aspect-ratio: 1.9 ) and (min-width: 1400px)
    #scroll-frame > *
        width 25vw