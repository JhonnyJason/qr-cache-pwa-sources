doctype html
html(lang=languageTag)
    head
        meta(charset='utf-8')
        
        //- Title and Description
        title !{pageTitle}
        meta(name='description', content=pageDescription)
        
        //- Open Graph meta Tags
        meta(property='og:image' content=pageImageURL)
        meta(property='og:title' content=pageTitle)
        meta(property='og:description' content=pageDescription)
        meta(property='og:type' content=pageType)
        meta(property='og:url' content=pageURL)
        meta(property='og:locale' content=pageLocale)

        //- Manifest
        - 
            const manifest = {
                "id": "dotv.ee/qrcodecache-v0",
                "name": pageTitle,
                "short_name": "QRcch",
                "start_url": "/index.html",
                "scope": "/",
                "icons": [
                    { 
                        "src": "/android-chrome-192x192.png", 
                        "sizes": "192x192", 
                        "type": "image/png" 
                    },
                    { 
                        "src": "/android-chrome-512x512.png", 
                        "sizes": "512x512", 
                        "type": "image/png" 
                    }
                ],
                "theme_color": "#002244",
                "background_color": "#ffffff",
                "display": "standalone",
                "orientation": "portrait",
                "display_override": ["standalone", "window-controls-overlay"],
                "lang": languageTag,
                "categories": ["tools", "utilities", "productivity", "convenience"],
                "dir": "ltr",
                "description": pageDescription
            }
            const manifestJson = JSON.stringify(manifest);
            const encodedManifest = encodeURIComponent(manifestJson);

        link(rel='manifest' href=`data:application/manifest+json,${encodedManifest}`)

        //- link(rel='manifest' href='/manifest.json')
        //- link(rel='manifest' href='data:application/manifest+json,{"id":"dotv.ee/qrcodecache-v0", "name":"'+pageTitle+'", "short_name": "QRcch", "start_url":"/", "scope": "/",     "icons": [ { "src": "/android-chrome-192x192.png","sizes": "192x192", "type": "image/png" }, { "src": "/android-chrome-512x512.png", "sizes": "512x512", "type": "image/png" } ], "theme_color": "#002244", "background_color": "#ffffff", "display": "standalone", "orientation": "portrait", "display_override": [ "standalone", "window-controls-overlay" ], "lang": "'+languageTag+'", "categories": [ "tools", "utilities", "productivity", "convenience" ], "dir": "ltr", "description": "'+pageDescription+'"')
       
        //- Favicon
        link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
        link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
        link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
        
        meta(name="msapplication-TileColor", content="#da532c")
        meta(name="theme-color", content="#002244")
        
        //- Screen
        meta(name='viewport', content='width=device-width, initial-scale=1.0')



        include styles-include.pug
    body
        include ../../source/index/indexbody.pug
        include scripts-include.pug
